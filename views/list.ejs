<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>記帳本</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/list.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa; /* 淡灰色背景 */
        }

        .container {
            background-color: #f7f9fc; /* 淺藍色區域背景 */
            color: #333; /* 深色文字 */
            width: 90%; /* 較大的寬度 */
            max-width: 800px; /* 最大寬度限制 */
            margin: 0 auto; /* 居中對齊 */
            padding: 20px; /* 加入間距 */
            border-radius: 8px; /* 圓角邊框 */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* 輕微陰影效果 */
        }

        h1 {
            font-size: 36px;
            color: #343a40; /* 深灰色 */
        }

        a {
            color: #007bff; /* 藍色連結 */
            text-decoration: none;
            transition: color 0.2s ease-in-out;
        }

        a:hover {
            color: #0056b3; /* 較深的藍色當滑鼠移過時 */
        }

        .row-cols-5 {
            border: 1px solid #e1e5ea; /* 淺灰色邊框 */
            background-color: #ffffff; /* 白色背景 */
            padding: 10px; /* 加入間距 */
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* 輕微陰影效果 */
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .checkbox {
            display: none;
        }

        label {
            cursor: pointer;
            display: inline-block;
            width: 24px;
            height: 24px;
            background-color: #ffffff;
            border: 1px solid #e1e5ea;
            border-radius: 4px;
            text-align: center;
            line-height: 24px;
            transition: background-color 0.2s ease-in-out;
        }

        .checkbox:checked + label::after {
            content: "X";
            color: #dc3545; /* 紅色 */
            font-weight: bold;
        }

        .table-hover .table-striped tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $(".checkbox").change(function() {
                if (this.checked) {
                    var itemId = $(this).data("item-id");
                    $.get("/account/" + itemId, function(data) {
                        location.reload(); // 刷新頁面以更新內容
                    });
                }
            });
        });
    </script>
</head>
<body>
    <div class="container text-center">
        <h1><i class="fas fa-piggy-bank"></i> 記帳本</h1>
        <hr />
        <div class="row row-cols-5">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">日期</th>
                        <th scope="col">事項</th>
                        <th scope="col">類型</th>
                        <th scope="col">金額</th>
                        <th scope="col">刪除</th>
                    </tr>
                </thead>
                <tbody>
                    <% accounts.forEach(item => { %>
                        <tr>
                            <td><%= item.time %></td>
                            <td><%= item.title %></td>
                            <td><%= item.type==="-1" ? "支出" : "收入" %></td>
                            <td><%= item.account %> 元</td>
                            <td>
                                <input type="checkbox" class="checkbox" data-item-id="<%= item.id %>" id="checkbox_<%= item.id %>">
                                <label for="checkbox_<%= item.id %>"></label>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
