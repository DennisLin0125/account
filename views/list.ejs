<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>記帳本</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/list.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $(".checkbox").change(function() {
                if (this.checked) {
                    var itemId = $(this).data("item-id");
                    $.get("/account/" + itemId, function(data) {
                        location.reload(); // 刷新頁面以更新內容
                    });
                }
            });
        });
    </script>
</head>
<body>
    <div class="container text-center">
        <h1><i class="fas fa-piggy-bank"></i> 記帳本</h1>
        <hr />
        <div class="row row-cols-5">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">日期</th>
                        <th scope="col">事項</th>
                        <th scope="col">類型</th>
                        <th scope="col">金額</th>
                        <th scope="col">刪除</th>
                    </tr>
                </thead>
                <tbody>
                    <% accounts.forEach(item => { %>
                        <tr>
                            <td><%= item.time %></td>
                            <td><%= item.title %></td>
                            <td><%= item.type==="-1" ? "支出" : "收入" %></td>
                            <td><%= item.account %> 元</td>
                            <td>
                                <input type="checkbox" class="checkbox" data-item-id="<%= item.id %>" id="checkbox_<%= item.id %>">
                                <label for="checkbox_<%= item.id %>"></label>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
